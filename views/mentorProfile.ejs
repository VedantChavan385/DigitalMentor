<%- include('partials/header') %>
<%- include('partials/messages') %>
<div class='card p-4 hover-lift' data-aos='fade-up'>
  <img src='<%= mentor.avatar || "/images/default-avatar.png" %>' style='width:100px;height:100px;border-radius:50%'>
  <h3><%= mentor.name %></h3>
  <p class='text-muted'>Expertise: <%= mentor.expertise %></p>
  <p><%= mentor.bio %></p>
  <% if(user && user.role==='mentee'){ %>
    <a href='/messages/chat/<%= mentor._id %>' class='btn btn-primary'>Chat</a>
    <form action='/sessions/request/<%= mentor._id %>' method='POST' class='d-inline session-request-form'>
      <input name='date' type='datetime-local' required class='form-control d-inline w-auto'>
      <input name='note' placeholder='Note' class='form-control d-inline w-50'>
      <button type='submit' class='btn btn-outline-primary'>Request Session</button>
    </form>
  <% } %>
</div>
<%- include('partials/footer') %>
