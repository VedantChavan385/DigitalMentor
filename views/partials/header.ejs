<!doctype html>
<html>
<head>
  <meta charset='utf-8'>
  <meta name='viewport' content='width=device-width,initial-scale=1'>
  <title>DigitalMentor</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Poppins:wght@600&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
  <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <!-- Socket.IO client (placed here so pages can call io() from inline scripts) -->
  <script src="/socket.io/socket.io.js"></script>
  <script>
    // expose current user and rtc ice servers for client scripts
    // middleware sets safe defaults (res.locals.user, rtcIceServers)
    window.CURRENT_USER = <%- JSON.stringify(user && user._id ? String(user._id) : '') %>;
    window.CURRENT_USER_NAME = <%- JSON.stringify(user && user.name ? user.name : '') %>;
    window.RTC_ICE_SERVERS = <%- JSON.stringify(rtcIceServers || []) %>;
  </script>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light fixed-top shadow-sm" style="backdrop-filter: blur(6px); background: rgba(255,255,255,0.75);">
  <div class="container">
    <a class="navbar-brand fw-bold" href="/">DigitalMentor</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu"><span class="navbar-toggler-icon"></span></button>
    <div class="collapse navbar-collapse" id="navmenu">
      <ul class="navbar-nav ms-auto align-items-center">
        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/#about">About Us</a></li>
        <li class="nav-item"><a class="nav-link" href="/#mentors">Mentors</a></li>
        <li class="nav-item"><a class="nav-link" href="/#resources">Resources</a></li>
        <% if(!user){ %>
          <li class="nav-item"><a class="btn btn-sm btn-outline-primary ms-2" href="/login">Login</a></li>
          <li class="nav-item"><a class="btn btn-sm btn-primary ms-2" href="/register">Register</a></li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
          <li class="nav-item">
            <a class="nav-link position-relative" href="/messages">Messages
              <% if (typeof unreadCount !== 'undefined' && unreadCount > 0) { %>
                <span class="badge bg-danger rounded-pill ms-1" style="position:relative; top:-2px;"><%= unreadCount %></span>
              <% } %>
            </a>
          </li>
          <% if(user.role==='mentor' || user.role==='admin'){ %><li class="nav-item"><a class="nav-link" href="/resources/add">Add Resource</a></li><% } %>
          <li class="nav-item"><a class="btn btn-sm btn-danger ms-2" href="/logout">Logout</a></li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
<main class='container mt-5 pt-4'>
