<%- include('partials/header') %>
<%- include('partials/messages') %>
<h2 data-aos='fade-down'>Mentors</h2>
<div class='row'>
  <% mentors.forEach((m,i)=>{ %>
    <div class='col-md-4 mb-3' data-aos='fade-up' data-aos-delay='<%= i*80 %>'>
      <div class='card p-3 text-center hover-lift'>
        <img src='<%= m.avatar || "/images/default-avatar.png" %>' class='rounded-circle mx-auto' style='width:90px;height:90px'>
        <h5 class='mt-3'><%= m.name %></h5>
        <p class='text-muted'><%= m.expertise %></p>
        <% if(user){ %>
          <a class='btn btn-sm btn-primary' href='/messages/chat/<%= m._id %>'>Chat</a>
          <a class='btn btn-sm btn-outline-secondary ms-2' href='/mentors/profile/<%= m._id %>'>View Profile</a>
        <% } else { %>
          <small class='text-muted'>Login to contact</small>
        <% } %>
      </div>
    </div>
  <% }) %>
</div>
<%- include('partials/footer') %>
