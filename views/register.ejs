<%- include('partials/header') %>
<%- include('partials/messages') %>
<div class='row justify-content-center mt-4'>
  <div class='col-md-6'>
    <div class='card p-4 shadow-sm' data-aos='fade-up'>
      <h3>Create account</h3>
      <form action='/register' method='POST'>
        <input class='form-control mb-2' name='name' placeholder='Full name' required>
        <input class='form-control mb-2' name='email' placeholder='Email' type='email' required>
        <input class='form-control mb-2' name='password' placeholder='Password' type='password' required>
        <select class='form-select mb-2' name='role'>
          <option value='mentee'>Mentee</option>
          <option value='mentor'>Mentor</option>
        </select>
        <input class='form-control mb-2' name='expertise' placeholder='Expertise (mentors only)'>
        <textarea class='form-control mb-2' name='bio' placeholder='Short bio (mentors)'></textarea>
        <button class='btn btn-primary w-100'>Register</button>
      </form>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
