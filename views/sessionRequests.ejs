<%- include('partials/header') %>
<%- include('partials/messages') %>
<h2 data-aos='fade-down'>Session Requests</h2>
<% if (!requests || requests.length === 0) { %>
  <div class='card p-3 mb-3' data-aos='fade-up'>
    <p class='text-muted'>No session requests at the moment.</p>
  </div>
<% } else { %>
  <% requests.forEach(r=>{ %>
    <div class='card p-3 mb-3 session-row' data-aos='fade-up'>
      <strong>Mentee:</strong> <%= r.mentee.name %>
      <p>Date: <%= r.date.toLocaleString() %></p>
      <p>Note: <%= r.note %></p>
      <p>Status: <%= r.status %></p>
      <div>
        <button class='btn btn-success btn-sm session-action' data-id='<%= r._id %>' data-action='accept'>Accept</button>
        <button class='btn btn-danger btn-sm session-action' data-id='<%= r._id %>' data-action='reject'>Reject</button>
      </div>
    </div>
  <% }) %>
<% } %>
<%- include('partials/footer') %>
