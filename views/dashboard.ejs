<%- include('partials/header') %>
<%- include('partials/messages') %>
<div class='card p-4' data-aos='fade-up'>
  <h3>Welcome, <%= user.name %></h3>
  <p>Role: <%= user.role %></p>
  <form action='/upload/avatar' method='POST' enctype='multipart/form-data'>
    <input type='file' name='avatar' required>
    <button class='btn btn-sm btn-primary'>Upload Avatar</button>
  </form>
  <% if(user.role==='mentor'){ %>
    <p><a href='/sessions/requests' class='btn btn-outline-primary'>Session Requests</a></p>
  <% } %>
  <p><a href='/messages' class='btn btn-outline-primary'>Messages</a></p>
  <% if(user.role!=='mentor'){ %>
    <!-- show messages link for non-mentors too -->
  <% } %>
  
</div>
<%- include('partials/footer') %>
